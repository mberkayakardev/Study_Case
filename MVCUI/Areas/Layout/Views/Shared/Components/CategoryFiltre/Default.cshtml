@model List<ListCategoriesDto>
 

@if (Model != null && Model.Count > 0)
{
    <div class="col-lg-3 mb-4">
        <h5 class="fw-bold mb-3">Kategoriler</h5>
        <div class="list-group">
            <a asp-controller="Home" asp-action="Index" asp-area="Layout" asp-route-categoryId="0" class="list-group-item list-group-item-action ">Tüm Kategoriler </a>

            @foreach (var item in Model)
            {

                <a asp-controller="Home" asp-action="Index" asp-area="Layout" asp-route-categoryId="@item.Id" class="list-group-item list-group-item-action ">@item.CategoryName</a>
            }
        </div>
    </div>


}

