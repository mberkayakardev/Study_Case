@model CreateCategoriesDto

<div class="card card-warning card-outline mb-4">
    <!--begin::Header-->
    <div class="card-header">
        <div class="card-title">Yeni Ürün Kaydı</div>
    </div> <!--end::Header--> <!--begin::Form-->
    <form asp-action="Create" asp-controller="Categories" method="post">
        <!--begin::Body-->
        <div class="card-body">
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Kategori Adı </label>
                <div class="col-sm-10"> <input asp-for="@Model.CategoryName" type="text" class="form-control" id="inputEmail3"> </div>
            </div>
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Kategori Açıklaması </label>
                <div class="col-sm-10"> <input asp-for="@Model.CategoryDescription" type="text" class="form-control" id="inputEmail3"> </div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-10 offset-sm-2">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="@Model.IsActive" type="checkbox" id="gridCheck1"> <label class="form-check-label" for="gridCheck1">
                            Aktif / Pasif
                        </label>
                    </div>
                </div>
            </div>
        </div> <!--end::Body--> <!--begin::Footer-->
        <div class="card-footer"> <button type="submit" class="btn btn-warning">Kaydet</button></div> <!--end::Footer-->
    </form> <!--end::Form-->
</div>