@model CreateProductsDto

@{
    var categoryList = ViewBag.Categories as List<SelectListItem>;
}

<div class="card card-warning card-outline mb-4">
    <!--begin::Header-->
    <div class="card-header">
        <div class="card-title">Yeni Ürün Kaydı</div>
    </div> <!--end::Header--> <!--begin::Form-->



    <form asp-action="Create" method="post">
        <!--begin::Body-->
        <div class="card-body">

            <div class="row mb-3">
                <label for="ProductName" class="col-sm-2 col-form-label">Ürün Adı</label>
                <div class="col-sm-10">
                    <input asp-for="ProductName" type="text" class="form-control" id="ProductName">
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label for="ProductDescription" class="col-sm-2 col-form-label">Açıklama</label>
                <div class="col-sm-10">
                    <textarea asp-for="ProductDescription" class="form-control" id="ProductDescription"></textarea>
                    <span asp-validation-for="ProductDescription" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label for="ProductPrice" class="col-sm-2 col-form-label">Fiyat</label>
                <div class="col-sm-10">
                    <input asp-for="ProductPrice" type="number" step="0.01" class="form-control" id="ProductPrice">
                    <span asp-validation-for="ProductPrice" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label for="Stock" class="col-sm-2 col-form-label">Stok</label>
                <div class="col-sm-10">
                    <input asp-for="Stock" type="number" class="form-control" id="Stock">
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label for="CategoryId" class="col-sm-2 col-form-label">Kategori</label>
                <div class="col-sm-10">
                    <select asp-for="CategoryId" asp-items="categoryList" class="form-control" id="CategoryId">
                        <option value="">Kategori Seçiniz</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label for="IsActive" class="col-sm-2 col-form-label">Aktif mi?</label>
                <div class="col-sm-10 d-flex align-items-center">
                    <input asp-for="IsActive" type="checkbox" class="form-check-input me-2" id="IsActive">
                    <label class="form-check-label" for="IsActive">Evet</label>
                </div>
            </div>

            <div class="card-footer"> <button type="submit" class="btn btn-warning">Kaydet</button></div> <!--end::Footer-->
        </div>
    </form> <!--end::Form-->
</div>